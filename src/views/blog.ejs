<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head.ejs') %>
    <title>Home Page</title>
  </head>
  <body>
    <%- include('./partials/nav.ejs') %>
    <div class="container mt-3">
      <h1><%= blogs.title %></h1>
      <img src="<%= blogs.coverImage %>" width="700px" />
      <pre><%= blogs.body %></pre>

      <div class="mt-4">
        <img src="<%= blogs.createdBy.profileImage %>" width="50px" /><%=
        blogs.createdBy.name %>
      </div>

      <div class="mt-4">
        <h3>Comments (<%= locals.comments.length %>)</h3>
        <% if (locals.user) { %>
        <div class="mt-4">
          <form action="/blog/comment/<%= blogs._id %>" method="post">
            <input
              type="text"
              class="form-control mb-2"
              id="content"
              name="content"
              placeholder="Enter your comment"
            />
            <button class="btn btn-sm btn-primary" type="submit">Add</button>
          </form>
        </div>
        <% } %> <% comments.forEach(comment => { %>
        <div class="mt-4">
          <img src="<%= comment.createdBy.profileImage  %>" width="50px" /><%=
          comment.createdBy.name %>
          <pre><%= comment.content %></pre>
        </div>
        <% }) %>
      </div>
    </div>
    <%- include('./partials/scripts.ejs') %>
  </body>
</html>
